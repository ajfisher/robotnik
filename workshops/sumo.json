{
  "_id": "makerland",
  "title": "Makerland Workshop",
  "description": "This is a workshop for Makerland Conference using a sumobot kit with an LED and a proximity sensor.",
  "board": "uno",
  "components": [
    {
      "name": "led",
      "class": "Led",
      "category": "actuator",
      "config": {
        "pin": 13
      }
    },
    {
      "name": "leftServo",
      "class": "Servo",
      "category": "actuator",
      "config": {
        "pin": 7,
        "type": "continuous"
      }
    },
    {
      "name": "rightServo",
      "class": "Servo",
      "category": "actuator",
      "config": {
        "pin": 11,
        "type": "continuous"
      }
    },
    {
      "name": "button",
      "class": "Button",
      "category": "sensor",
      "config": {
        "pin": "A0"
      }
    }
  ],
  "exercises": [
    {
      "description": "First, try to make an LED blink when you push a button.",
      "components": [
        "led", "button", "leftServo"
      ]
    },
    {
      "description": "Now make a motor turn clockwise, when you press the button",
      "components": [
        "leftServo", "button"
      ]
    }
  ]
}
