{
  "_id": "makerland",
  "title": "Makerland Workshop",
  "description": "This is a workshop for Makerland Conference using a sumobot kit with an LED and a proximity sensor.",
  "board": "uno",
  "components": [
    {
      "name": "led13",
      "class": "Led",
      "category": "actuator",
      "config": {
        "pin": 13
      }
    },
    {
      "name": "led3",
      "class": "Led",
      "category": "actuator",
      "config": {
        "pin": 3
      }
    },
    {
      "name": "leftServo",
      "class": "Servo",
      "category": "actuator",
      "config": {
        "pin": 7,
        "type": "continuous"
      }
    },
    {
      "name": "rightServo",
      "class": "Servo",
      "category": "actuator",
      "config": {
        "pin": 11,
        "type": "continuous"
      }
    },
    {
      "name": "leftmotor",
      "class": "Motor",
      "category": "actuator",
      "config": {
        "pins": {
			"pwm": 9,
			"dir": 8
        },
        "invertPWM": true
      }
    },
    {
      "name": "liftServo",
      "class": "Servo",
      "category": "actuator",
      "config": {
        "pin": 8,
        "type": "standard"
      }
    },
    {
      "name": "button",
      "class": "Button",
      "category": "sensor",
      "config": {
        "pin": "5"
      }
    }
  ],
  "exercises": [
    {
      "description": "First, try to make an LED blink when you push a button.",
      "components": [
        "led13", "led3", "leftServo", "rightServo", "leftmotor", "button"
      ]
    },
    {
      "description": "Now make a motor turn clockwise, when you press the button",
      "components": [
        "leftServo", "button"
      ]
    }
  ]
}
